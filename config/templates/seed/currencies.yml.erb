- id:                   usd
  symbol:               '$'
  type:                 fiat
  precision:            2
  base_factor:          1
  enabled:              true
  quick_withdraw_limit: 1000
  deposit_fee:          0
  withdraw_fee:         0

- id:                   btc
  symbol:               '฿'
  type:                 coin
  precision:            8
  base_factor:          100_000_000
  enabled:              true
  quick_withdraw_limit: 0.1
  deposit_fee:          0
  withdraw_fee:         0
  options:
    #
    # Generic configuration variables.
    case_sensitive:            true # IMPORTANT: Be sure to set the correct value!
    deposit_confirmations:     1 # Set to zero to stop processing all incoming deposits.
    supports_cash_addr_format: false # Set to «true» for Bitcoin Cash or any other currency which supports CashAddr format.
    #
    # API client configuration.
    api_client: BTC
    #
    # Bitcoind specific configuration.
    json_rpc_endpoint: http://user:password@127.0.0.1:18332
    #
    # BitGo specific configuration.
    bitgo_test_net:              on
    bitgo_wallet_id:             ~
    bitgo_wallet_address:        ~
    bitgo_wallet_passphrase:     ~
    bitgo_rest_api_root:         https://test.bitgo.com/api/v2
    bitgo_rest_api_access_token: ~
    #
    # Block explorer configuration.
    wallet_url_template:      https://blockchain.info/address/#{address}
    transaction_url_template: https://blockchain.info/tx/#{txid}


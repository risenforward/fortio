<% content_for :frame do %>
  <div class="container">
    <ul class="nav nav-justified assets-nav">
      <li class="active" data-scroll-nav="0">
        <a><%= t('.liability-proof') %></a>
      </li>
      <li data-scroll-nav="1">
        <a><%= t('.btc-assets') %></a>
      </li>
      <li data-scroll-nav="1">
        <a><%= t('.bch-assets') %></a>
      </li>
       <li data-scroll-nav="1">
        <a><%= t('.ltc-assets') %></a>
      </li>
      <li data-scroll-nav="2">
        <a><%= t('.xrp-assets') %></a>
      </li>
      <li data-scroll-nav="2">

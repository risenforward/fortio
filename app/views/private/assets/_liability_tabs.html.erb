<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active">
      <a class="btc-proof" href="#btc-proof" data-toggle="tab"><%= t('.verify-btc').html_safe %></a>
    </li>
    <li>
      <a class="btc-proof" href="#bch-proof" data-toggle="tab"><%= t('.verify-bch').html_safe %></a>
    </li>
    <li>
      <a class="ltc-proof" href="#ltc-proof" data-toggle="tab"><%= t('.verify-ltc').html_safe %></a>
    </li>
    <li>
      <a class="xrp-proof" href="#xrp-proof" data-toggle="tab"><%= t('.verify-xrp').html_safe %></a>
    </li>
    <li>
      <a class="dash-proof" href="#dash-proof" data-toggle="tab"><%= t('.verify-dash').html_safe %></a>
    </li>
    <li>
      <a class="fiat-proof" href="#fiat-proof" data-toggle="tab"><%= t('.verify-fiat', currency: Peatio.base_fiat_ccy).html_safe %></a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="btc-proof" class="tab-pane active">
      <div class="trade-wrapper">
        <div class="assets">
          <span class="title"><%= t('.btc-assets-total').html_safe %></span>
          <span class="currency">
            <%= t('currency.icon.btc').html_safe %>
            <%= @btc_proof.sum %>
          </span>
        </div>
        <%= render 'liability_data', account: @btc_account, proof: @btc_proof %>
      </div>
    </div>

    <div id="xrp-proof" class="tab-pane active">
      <div class="trade-wrapper">
        <div class="assets">
          <span class="title"><%= t('.xrp-assets-total').html_safe %></span>

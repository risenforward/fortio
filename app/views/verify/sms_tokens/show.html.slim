= simple_form_for @token, url: verify_sms_token_path, remote: true, as: :sms_token do |f|

  - if current_user.app_two_factor.activated?
    h4 = t('.step-1')
    p: span = t('.phone_number')

  = f.input :phone_number do
    .input-group
      == f.text_field :phone_number, value: current_user.phone_number, label: t('.phone_number'), class: 'string optional form-control', placeholder: t('.phone_number')
      .input-group-btn
        button.btn.btn-primary type='submit' name="commit" value="send_code" data-orig-name=t('.send_code') data-alt-name=t('.send_code_alt') = t('.send_code')
  = f.input :verify_code, placeholder: t('.input_verify_code')


  - if current_user.app_two_factor.activated?
    h4 = t('.step-2')
    p: span = t('.input_google_auth_verify_code')
    = two_factor_tag(current_user)

  hr.split

  = f.button :wrapped, t('.submit'), cancel: settings_path

= content_for :guide_title do
  h3
    i.fa.fa-mobile.fa-2x
    span = t('.title')

= content_for :guide do
  p.text-ignore
    = t('.description')
  p.text-warning
    = t('.warning')



<%#
Local variables:
* grid - instance of Datagrid
* assets - Array of database Entities
* options - passed options Hash
%>
<%
  options[:html][:class] += " table"
%>
<%= content_tag :div do %>
  <table class="<%= options[:html][:class] %>">
    <thead>
      <%= datagrid_header(grid, options) %>
    </thead>
    <tbody>
      <% if assets.empty? %>
        <tr><td class='datagrid-empty' colspan="99"><%= t('datagrid.empty') %><td></tr>
      <% else %>
        <%= datagrid_rows(grid, assets, options) %>
      <% end %>
    </tbody>
  </table>
  <% if assets && assets.respond_to?('current_page') %>
    <div class="pt-4 bg-body w-100">
      <%= paginate(assets) %>
    </div>
  <% end %>
<% end %>

<% market = market_stats %>

<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="templateBody">
      <tr>
        <td valign="top" class="bodyContent">
          <h1><%= market.name %></h1>
          <table border="0" cellpadding="0" cellspacing="0" width="100%" class="report">
            <tr>
              <td>
                <%= t('.trades_count') %><br/>
                <span>&nbsp;</span>
              </td>
              <td>
                <%= @stats['trade_users'][market.id][1] %><br/>
                <span><%= @base['trade_users'][market.id][1] %></span>
              </td>
            </tr>
            <tr>
              <td>
                <%= t('.trade_users_count') %><br/>
                <span>&nbsp;</span>
              </td>
              <td>
                <%= @stats['trade_users'][market.id][2] %><br/>
                <span><%= @base['trade_users'][market.id][2] %></span>
              </td>
            </tr>
          </table>

          <table border="0" cellpadding="0" cellspacing="0" width="100%" id="templateColumns">
            <tr>
              <td align="center" valign="top" class="templateColumnContainer" style="padding-top:20px;">
                <table border="0" cellpadding="20" cellspacing="0" width="100%">
                  <tr>
                    <td valign="top" class="leftColumnContent" mc:edit="left_column_content">
                      <h2><%= t('.top_trades_users') %></h2>
                      <% if @stats['top_stats'][market.id][1].empty? %>
                        <h3><%= t('.no_data') %></h3>
                      <% else %>
                        <% @stats['top_stats'][market.id][1].each_with_index do |(uid, count), i| %>
                        <% m = Member.find uid %>
                        <p><%= i+1 %>. <%= link_to m.name, admin_member_url(m, host: ENV['ADMIN_URL']), title: m.email %> (<%= t('.top_stats_count', count: count) %>)
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                </table>
              </td>
              <td align="center" valign="top" class="templateColumnContainer" style="padding-top:20px;">
                <table border="0" cellpadding="20" cellspacing="0" width="100%">
                  <tr>
                    <td valign="top" class="rightColumnContent" mc:edit="right_column_content">
                      <h2><%= t('.top_volume_users') %></h2>
                      <% if @stats['top_stats'][market.id][2].empty? %>
                        <h3><%= t('.no_data') %></h3>
                      <% else %>
                        <% @stats['top_stats'][market.id][2].each_with_index do |(uid, volume), i| %>
                        <% m = Member.find uid %>
                        <p><%= i+1 %>. <%= link_to m.name, admin_member_url(m, host: ENV['ADMIN_URL']), title: m.email %> (<%= volume %><%= market.base_unit.upcase %>)
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>

        </td>
      </tr>
    </table>
  </td>
</tr>

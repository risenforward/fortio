<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="templateBody">
      <tr>
        <td valign="top" class="bodyContent">
          <h1><%= t('.member_stats') %></h1>
          <table border="0" cellpadding="0" cellspacing="0" width="100%" class="report">
            <tr>
              <td>
                <%= t('.signup_count') %><br/>
                <span><%= t('.base_day') %></span>
              </td>
              <td>
                <%= @stats['member_stats'][1] %><br/>
                <span><%= @base['member_stats'][1] %></span>
              </td>
              <td></td>
            </tr>
            <tr>
              <td>
                <%= t('.activation_count') %><br/>
                <span><%= t('.base_day') %></span>
              </td>
              <td>
                <%= @stats['member_stats'][2] %><br/>
                <span><%= @base['member_stats'][2] %></span>
              </td>
              <td></td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>

<tr>
  <td align="center" valign="top">
    <table border="0" cellpadding="0" cellspacing="0" width="100%" class="templateBody">
      <tr>
        <td valign="top" class="bodyContent">
          <h1><%= t('.fund_stats') %></h1>
          <table border="0" cellpadding="0" cellspacing="0" width="100%" class="report">
            <tr>
              <th></th>
              <th><%= t('.deposits') %></th>
              <th><%= t('.withdraws') %></th>
              <th><%= t('.wallet_stats') %></th>
            </tr>
            <% Currency.all.each do |currency| %>
            <% code = currency.code %>
            <tr>
              <td>
                <%= code.upcase %><br/>
                <span>&nbsp;</span>
              </td>
              <td>
                <%= @stats['fund_stats'][code][2] %> (<%= t('.top_stats_count', count: @stats['fund_stats'][code][1]) %>)<br/>
                <span><%= @base['fund_stats'][code][2] %> (<%= t('.top_stats_count', count: @base['fund_stats'][code][1]) %>)</span>
              </td>
              <td>
                <%= @stats['fund_stats'][code][4] %> (<%= t('.top_stats_count', count: @stats['fund_stats'][code][3]) %>)<br/>
                <span><%= @base['fund_stats'][code][4] %> (<%= t('.top_stats_count', count: @base['fund_stats'][code][3]) %>)</span>
              </td>
              <td>
                <%= @stats['wallet_stats'][code][3] %><br/>
                <span><%= @base['wallet_stats'][code][3] %></span>
              </td>
            </tr>
            <% end %>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>

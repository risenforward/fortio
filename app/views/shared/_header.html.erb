<header class="mb-4">
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="text-center navbar-brand" href="<%= root_path %>">
        <img class="nav-img" src="<%= ENV['LOGO_URL'] || image_path('logo.svg') %>">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#top-navbar" aria-controls="top-navbar" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="top-navbar">
        <ul id="menu" class="navbar-nav mr-auto">
          <%= top_nav_link(t('header.market'), trading_path(current_market.id), 'exchange-alt', target: '_blank') if current_user %>
          <%= top_nav_link(t('header.funds'), funds_path, 'money-bill-wave', controllers: ['funds']) if current_user %>
          <%= top_nav_link(t('header.history'), order_history_path, 'book', controllers: ['history']) if current_user %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <%= render partial: 'shared/header_profile_setting' if current_user %>
          <%= render partial: 'shared/header_lang_sel' %>
        </ul>
      </div>
    </div>
  </nav>
</header>
